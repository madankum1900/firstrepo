 Ubuntu linux Opersating system:
	
        1. sudo apt-add-repository ppa:ansible/ansible

	2. sudo apt update

	3. sudo apt install ansible

	4. sudo mkdir -p /etc/ansible

	5. sudo vi /etc/ansible/hosts
	   [workers]
            worker1 ansible_host=203.0.113.111
            [all:vars]
            ansible_python_interpreter=/usr/bin/python3




[workers]
worker1 ansible_host=192.168.1.12
worker2 ansible_host=192.168.1.13

[all:vars]
ansible_python_interpreter=/usr/bin/python3
